{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3 class="mt-4">Nova Categoria: </h3>
<div class="card mt-3">
    <div class="card-body">
        <form action="/admin/categoria/nova" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" id="nome" placeholder="Insira o Nome" class="form-control"><br>
            <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="Insira o Slug" class="form-control"><br>
            <button type="submit" class="btn btn-success ">Criar Categoria</button>
        </form>
    </div>
</div>