<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Site de Postagens</h1>
        <p class="col-md-8 fs-4">Esse site tem como intuito de postar e editar postagens</p>
        {{#if user}}
            
        {{else}}
            <a href="/usuarios/registro"><button class="btn btn-primary btn-lg" type="button">Crie uma conta</button></a>
        {{/if}}
      </div>
</div>
<h4>Postagens Recentes:</h4>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <a href="/postagens/{{slug}}"><button class="btn btn-success mt-3">Saiba mais</button></a><hr>
            
            <small>{{categoria.Nome}}</small><br>
            <small>Data da Publicação: {{data}}</small> 
        </div>
    </div>
{{else}}
    <h6>Nenhuma Postagem registrada</h6>
{{/each}}